<PageTitle>
    Home - Ling.Tools
</PageTitle>

<div class="tool-search">
    <FluentSearch @bind-Value="SearchText"
                  Autofocus="true"
                  Placeholder="@($"{L["Search"]}...")"
                  Spellcheck="true"
                  Immediate="true" />
    @* <FluentListbox TOption="ToolInfo"
                   ValueChanged="OnToolClick">
        <ForEach Source="FilteredTools">
            <Template>
                <FluentOption Value="@context.Id">
                    @context.Name
                </FluentOption>
            </Template>
