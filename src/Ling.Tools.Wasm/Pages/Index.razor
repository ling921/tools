    </FluentListbox> *@
</div>

<div class="tool-list">
    <FluentGrid OnBreakpointEnter="OnBreakpointEnterHandler"
                Justify="JustifyContent.FlexStart"
                Spacing="3">
        <ForEach Source="Tools">
            <Template>
                <FluentGridItem xs="12" sm="6" md="4" lg="3">
                    <FluentCard Width="100%" Height="120px">
                        <div>@context.Name</div>
                    </FluentCard>
                </FluentGridItem>
            </Template>
        </ForEach>
    </FluentGrid>
</div>
